{
  "manifest_version": 3,
  "name": "Markdown Notepad",
  "version": "1.0",
  "description": "Minimalist markdown notepad extension.",
  "background": {
    "service_worker": "background.js"},

  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:11434/*"],
    
  "action": {
    "default_icon": {
      "16": "icon1.png",
      "48": "icon1.png",
      "128": "icon1.png"
    }
  },
  "icons": {
    "16": "icon1.png",
    "48": "icon1.png",
    "128": "icon1.png"
  }
}
